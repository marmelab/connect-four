{% extends 'game/base.html.twig' %}

{% block status %}
    Game over,
    {% if game.getWinner() %}
        Winner is : <div class="badge {{ game.getWinner() == game.getRedPlayer() ? "red" : "yellow" }}"></div>
        {{ game.getWinner().getNickname() }}
    {% else %}
        Draw
    {% endif %}
{% endblock %}

{% block game %}

    {{ include('board/board.html.twig', { 'game': game, 'columnBounds': columnBounds, 'disabled': true }) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .winner{
            display:inline-block;
        }
    </style>
{% endblock %}
