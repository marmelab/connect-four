{% extends 'game/base.html.twig' %}

{% block status %}
    Now playing
{% endblock %}

{% block game %}
    <div id="controls-container">
        {% for i in 0..game.getBoard().getCells() | length - 1 %}
            <form action="{{ path('dropDisc', { 'id': game.getId(), 'column': i}) }}">
                <button type="submit">V</button>
            </form>
        {% endfor %}
        <div class="clearfix"></div>
    </div>

    {{ include('board/board.html.twig', { 'game': game }) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        #controls-container {
            margin: 0 10px 10px;
        }

        #controls-container form {
            display: inline-block;
            margin: 2px;
            box-sizing: border-box;
        }

        #controls-container button {
            height: 40px;
            width: 40px;
        }

    </style>
{% endblock %}
