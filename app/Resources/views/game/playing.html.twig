{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <h1>Connect Four Game</h1>
            <div>
                <span>Playing</span>
            </div>

            <div>
                <div class="{{ game.getCurrentPlayer() == game.getRedPlayer() ? " winner" : " " }}">
                    <div class="badge red"></div>
                    {{ game.getRedPlayer().getNickname() }}
                </div>
                <div class="{{ game.getCurrentPlayer() == game.getRedPlayer() ? " winner" : " " }}">
                    <div class="badge yellow"></div>
                    {{ game.getYellowPlayer().getNickname() }}
                </div>
            </div>

        </div>
    </div>
    <div id="disc-container">
        {% for column in game.getBoard().getCells() %}
            <div class="column">
                {% for disc in column | reverse %}
                    {% if disc %}
                        {% set color = game.getYellowPlayer() == disc.getPlayer()
                            ? "yellow"
                            : "red" %}
                        <div class="cell disc {{ color }}"></div>
                    {% else %}
                        <div class="cell empty"></div>
                    {% endif %}
                {% endfor %}
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .badge {
            display: inline-block;
            width: 12px;
            height: 12px;
        }

        .winner {
            font-weight: bold;
        }

        .badge.yellow {
            background-color: yellow;
        }

        .badge.red {
            background-color: red;
        }

        .column {
            float: left;
        }

        .cell {
            height: 40px;
            width: 40px;
            border: 1px solid;
            box-sizing: border-box;
        }

        .cell.empty {
            border-color: grey;
        }

        .disc {
            height: 40px;
            width: 40px;
            border: 1px solid;
            box-sizing: border-box;
        }

        .disc.yellow {
            background-color: yellow;
        }

        .disc.red {
            background-color: red;
        }

    </style>
{% endblock %}
